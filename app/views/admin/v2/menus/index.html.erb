<header class="bg-yellow-500 text-white shadow-lg">
  <div class="container mx-auto px-4 py-4 flex justify-between items-center">
    <h1 class="text-xl font-bold">かけはし糖尿病・甲状腺クリニック 管理画面</h1>
    <%= button_to "ログアウト", destroy_administrator_session_path, method: :delete, class: "bg-red-500 hover:bg-red-600 text-white font-semibold py-2 px-4 rounded transition duration-200" %>
  </div>
</header>

<div class="flex">
  <!-- Sidebar -->
  <nav class="w-64 bg-gray-800 min-h-screen">
    <div class="p-4">
      <ul class="space-y-2">
        <li>
          <%= link_to admin_v2_appointments_path, class: "flex items-center space-x-3 text-gray-300 hover:text-white hover:bg-gray-700 rounded px-3 py-2 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
            </svg>
            <span>予約一覧</span>
          <% end %>
        </li>
        <li>
          <%= link_to admin_v2_menus_path, class: "flex items-center space-x-3 text-white bg-gray-700 rounded px-3 py-2 transition" do %>
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path>
            </svg>
            <span>予約枠管理</span>
          <% end %>
        </li>
      </ul>
    </div>
  </nav>

  <!-- Main Content -->
  <div class="flex-1 p-6 bg-gray-50">
    <% if flash[:notice] %>
      <div class="bg-green-100 border border-green-400 text-green-700 px-4 py-3 rounded mb-4">
        <%= flash[:notice] %>
      </div>
    <% end %>
    <% if flash[:alert] %>
      <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded mb-4">
        <%= flash[:alert] %>
      </div>
    <% end %>

    <h1 class="text-3xl font-bold mb-6">予約枠管理</h1>

    <!-- Week Navigation -->
    <div class="bg-white rounded-lg shadow mb-6 p-4">
      <div class="flex justify-between items-center">
        <%= link_to admin_v2_menus_path(date: @week_start - 7.days), class: "text-yellow-600 hover:text-yellow-800 font-medium flex items-center" do %>
          <svg class="w-5 h-5 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
          </svg>
          前の週
        <% end %>
        
        <h2 class="text-xl font-semibold">
          <%= @week_start.strftime("%Y/%m/%d") %> 〜 <%= @week_end.strftime("%Y/%m/%d") %>
        </h2>
        
        <%= link_to admin_v2_menus_path(date: @week_start + 7.days), class: "text-yellow-600 hover:text-yellow-800 font-medium flex items-center" do %>
          次の週
          <svg class="w-5 h-5 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
          </svg>
        <% end %>
      </div>
    </div>

    <!-- Calendar Grid -->
    <div class="grid grid-cols-7 gap-4">
      <% 7.times do |i| %>
        <% current_date = @week_start + i.days %>
        <% day_menus = @menus_by_day[current_date] || [] %>
        
        <div class="bg-white rounded-lg shadow">
          <!-- Day Header -->
          <div class="px-4 py-3 border-b bg-gray-50">
            <div class="text-center">
              <div class="text-lg font-bold">
                <%= current_date.strftime("%m/%d") %>
              </div>
              <div class="text-sm text-gray-600">
                <%= %w[日 月 火 水 木 金 土][current_date.wday] %>
              </div>
              <button onclick="toggleDeleteMode('<%= current_date %>')" class="text-xs text-red-500 mt-1 hover:underline cursor-pointer">
                全削除
              </button>
            </div>
          </div>
          
          <!-- Time Slots -->
          <div class="p-2 space-y-2 max-h-96 overflow-y-auto">
            <% day_menus.each do |menu| %>
              <% if menu.appointment.present? %>
                <div class="p-2 bg-yellow-100 border border-yellow-300 rounded">
                  <div class="text-sm font-medium text-yellow-800">
                    <%= menu.department %> <%= menu.start_at.strftime("%H:%M") %>
                    <svg class="inline w-4 h-4 text-yellow-600 ml-1" fill="currentColor" viewBox="0 0 20 20">
                      <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z"></path>
                    </svg>
                  </div>
                </div>
              <% else %>
                <div class="p-2 bg-gray-100 hover:bg-gray-200 rounded flex justify-between items-center group">
                  <div class="text-sm">
                    <%= menu.department %> <%= menu.start_at.strftime("%H:%M") %>
                  </div>
                  <%= button_to "×", admin_v2_menu_path(menu), method: :delete, 
                      class: "text-red-500 hover:text-red-700 font-bold text-lg opacity-0 group-hover:opacity-100 transition",
                      data: { confirm: "この予約枠を削除しますか？" } %>
                </div>
              <% end %>
            <% end %>
            
            <!-- Add Slot Button -->
            <button onclick="openAddSlotModal('<%= current_date %>')" class="w-full p-2 border-2 border-dashed border-gray-300 rounded hover:border-gray-400 hover:bg-gray-50 transition">
              <svg class="w-5 h-5 mx-auto text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4"></path>
              </svg>
            </button>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- Add Slot Modal -->
<div id="addSlotModal" class="fixed inset-0 bg-gray-600 bg-opacity-50 hidden z-50">
  <div class="flex items-center justify-center min-h-screen px-4">
    <div class="bg-white rounded-lg shadow-xl max-w-md w-full">
      <div class="px-6 py-4 border-b">
        <h3 class="text-lg font-semibold">予約枠を追加</h3>
      </div>
      
      <%= form_with model: Menu.new, url: admin_v2_menus_path, local: true, class: "p-6" do |f| %>
        <%= f.hidden_field :start_at, id: "slot_start_at" %>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">診療科</label>
          <%= f.select :department, options_for_select([["内科", "内科"], ["漢方", "漢方"]]), {}, 
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500" %>
        </div>
        
        <div class="mb-4">
          <label class="block text-sm font-medium text-gray-700 mb-2">時間</label>
          <select id="slot_time" class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-yellow-500">
            <% %w[09:00 09:30 10:00 10:30 11:00 11:30 13:00 13:30 14:00 14:30 15:00 15:30 16:00 16:30 17:00 17:30].each do |time| %>
              <option value="<%= time %>"><%= time %></option>
            <% end %>
          </select>
        </div>
        
        <div class="flex justify-end space-x-3">
          <button type="button" onclick="closeAddSlotModal()" class="px-4 py-2 text-gray-700 hover:text-gray-900">
            キャンセル
          </button>
          <%= f.submit "追加", class: "px-4 py-2 bg-yellow-500 text-white rounded hover:bg-yellow-600 transition" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
  let currentDate = null;

  function openAddSlotModal(date) {
    currentDate = date;
    document.getElementById('addSlotModal').classList.remove('hidden');
    updateStartAt();
  }

  function closeAddSlotModal() {
    document.getElementById('addSlotModal').classList.add('hidden');
  }

  function updateStartAt() {
    if (!currentDate) return;
    
    const time = document.getElementById('slot_time').value;
    const dateTime = `${currentDate} ${time}:00`;
    document.getElementById('slot_start_at').value = dateTime;
  }

  document.getElementById('slot_time').addEventListener('change', updateStartAt);

  function toggleDeleteMode(date) {
    if (confirm(`${date}の予約のない枠をすべて削除しますか？`)) {
      const form = document.createElement('form');
      form.method = 'POST';
      form.action = '<%= destroy_all_admin_v2_menus_path %>';
      
      const methodInput = document.createElement('input');
      methodInput.type = 'hidden';
      methodInput.name = '_method';
      methodInput.value = 'delete';
      
      const tokenInput = document.createElement('input');
      tokenInput.type = 'hidden';
      tokenInput.name = 'authenticity_token';
      tokenInput.value = document.querySelector('meta[name="csrf-token"]').content;
      
      const minDateInput = document.createElement('input');
      minDateInput.type = 'hidden';
      minDateInput.name = 'min_date';
      minDateInput.value = date;
      
      const maxDateInput = document.createElement('input');
      maxDateInput.type = 'hidden';
      maxDateInput.name = 'max_date';
      maxDateInput.value = date;
      
      form.appendChild(methodInput);
      form.appendChild(tokenInput);
      form.appendChild(minDateInput);
      form.appendChild(maxDateInput);
      
      document.body.appendChild(form);
      form.submit();
    }
  }

  // Close modal on Escape key
  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape') {
      closeAddSlotModal();
    }
  });
</script>
